{
  "name": "telegram-gateway-monorepo",
  "private": true,
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/gateway",
    "apps/miniapp"
  ],
  "scripts": {
    "dev": "npm run dev --workspace @zico/telegram-gateway",
    "dev:gateway": "npm run dev --workspace @zico/telegram-gateway",
    "dev:miniapp": "npm run dev --workspace miniapp",
    "build": "npm run --workspaces --if-present build",
    "test": "npm run --workspaces --if-present test",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.2",
    "typescript": "^5.5.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "lightningcss": "^1.30.2",
    "vite": "7.1.8"
  }
}
